@model ProjetWeb.Models.Utilisateur

@{
    ViewData["Title"] = "Supprimer";
    Layout = "_LayoutLogged";
}

<h1>Supprimer</h1>

<h3>Êtes-vous sûr de supprimer l'utilisateur?</h3>
<div>
    <h4>Utilisateur</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomUtilisateur)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomUtilisateur)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Courriel)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Courriel)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MotPasse)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MotPasse)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TypeUtilisateurNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TypeUtilisateurNavigation.TypeUtilisateur)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="NoUtilisateur" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-action="Index">Retour à la liste</a>
    </form>
</div>
