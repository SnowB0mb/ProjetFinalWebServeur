@model ProjetWeb.Models.Utilisateur

@{
    ViewData["Title"] = "Ajouter";
    Layout = "_LayoutLogged";
}

<h1>Ajouter</h1>

<h4>Utilisateur</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomUtilisateur" class="control-label"></label>
                <input asp-for="NomUtilisateur" class="form-control" />
                <span asp-validation-for="NomUtilisateur" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Courriel" class="control-label"></label>
                <input asp-for="Courriel" class="form-control" />
                <span asp-validation-for="Courriel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MotPasse" class="control-label"></label>
                <input asp-for="MotPasse" class="form-control" />
                <span asp-validation-for="MotPasse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmMotPasse" class="control-label"></label>
                <input asp-for="ConfirmMotPasse" class="form-control" />
                <span asp-validation-for="ConfirmMotPasse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeUtilisateur" class="control-label"></label>
                <select asp-for="TypeUtilisateur" class="form-control" asp-items="ViewBag.TypeUtilisateur"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Ajouter" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour à la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
