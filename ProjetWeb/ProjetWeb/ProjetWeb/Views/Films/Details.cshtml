@model ProjetWeb.Models.Film

@{
    ViewData["Title"] = "Details";
    Layout = "_LayoutLogged";
}

<h1>Détails</h1>
<div class="card border-success">
    <div class="card-header bg-success text-white">
        <h4>Film</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                <label>Affiche du film</label>
            </dt>
            <dd class="col-sm-10">
                @if (Model.ImagePochette != null)
                {
                    <div>
                        <img src="~/images/@(Model.ImagePochette)" class="img-fluid" width="150px" />
                    </div>
                }
                else
                {
                    <div>
                        <img src="~/images/defaut.jpg" class="img-fluid" width="150px" />
                    </div>
                }
            </dd>
            <dt class="col-sm-2">
               <label>Année de sortie</label>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AnneeSortie)
            </dd>
            <dt class="col-sm-2">
                <label>Date mise à jour</label>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateMaj)
            </dd>
            <dt class="col-sm-2">
                <label>Utilisateur mise à jour</label>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NoUtilisateurMajNavigation.NoUtilisateur)
            </dd>
            <dt class="col-sm-2">
                <label>Résumé</label>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Resume)
            </dd>
            <dt class="col-sm-2">
                <label>Durée en minute</label>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DureeMinutes)
            </dd>
            <dt class="col-sm-2">
                <label>Film original?</label>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FilmOriginal)
            </dd>
            <dt class="col-sm-2">
                <label>Nombre de disques</label>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NbDisques)
            </dd>
            <dt class="col-sm-2">
                <label>Titre français</label>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TitreFrancais)
            </dd>
            <dt class="col-sm-2">
                <label>Titre original</label>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TitreOriginal)
            </dd>
            <dt class="col-sm-2">
                <label>Version étendue?</label>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.VersionEtendue)
            </dd>
            <dt class="col-sm-2">
               <label>Catégorie</label>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CategorieNavigation.NoCategorie)
            </dd>
            <dt class="col-sm-2">
                <label>Format</label>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FormatNavigation.NoFormat)
            </dd>
            <dt class="col-sm-2">
                <label>Producteur</label>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NoProducteurNavigation.NoProducteur)
            </dd>
            <dt class="col-sm-2">
                <label>Réalisateur</label>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NoRealisateurNavigation.NoRealisateur)
            </dd>
            <dt class="col-sm-2">
                <label>Extra</label>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Xtra)
            </dd>
        </dl>

    </div>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.NoFilm">Modifier</a>
    <a class="btn btn-secondary" asp-action="Index">Retour à la liste</a>
</div>
