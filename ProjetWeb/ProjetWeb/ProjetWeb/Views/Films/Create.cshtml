@model ProjetWeb.Models.Film

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Film</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AnneeSortie" class="control-label">Année de sortie</label>
                <input asp-for="AnneeSortie" class="form-control" />
                <span asp-validation-for="AnneeSortie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Categorie" class="control-label">Catégorie</label>
                <select asp-for="Categorie" class ="form-control" asp-items="ViewBag.Categorie"></select>
            </div>
            <div class="form-group">
                <label asp-for="Format" class="control-label"></label>
                <select asp-for="Format" class ="form-control" asp-items="ViewBag.Format"></select>
            </div>
            <div class="form-group">
                <label asp-for="Resume" class="control-label">Résumé</label>
                <input asp-for="Resume" class="form-control" />
                <span asp-validation-for="Resume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DureeMinutes" class="control-label">Durée en minutes</label>
                <input asp-for="DureeMinutes" class="form-control" />
                <span asp-validation-for="DureeMinutes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Film original?</label>
                <input type="checkbox" id="checkFilmOriginal" name="checkFilmOriginal" />
            </div>
            <div class="form-group">
                <label asp-for="ImagePochette" class="control-label">Affiche du film</label>
                <input asp-for="ImagePochette" class="form-control" />
                <span asp-validation-for="ImagePochette" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NbDisques" class="control-label">Nombre de disques</label>
                <input asp-for="NbDisques" class="form-control" />
                <span asp-validation-for="NbDisques" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TitreFrancais" class="control-label">Titre français</label>
                <input asp-for="TitreFrancais" class="form-control" />
                <span asp-validation-for="TitreFrancais" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TitreOriginal" class="control-label">Titre original</label>
                <input asp-for="TitreOriginal" class="form-control" />
                <span asp-validation-for="TitreOriginal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VersionEtendue" class="control-label">Version étendue?</label>
                <input type="checkbox" id="checkVersionEtendue" name="checkVersionEtendue"/>
            </div>
            <div class="form-group">
                <label asp-for="NoRealisateur" class="control-label">Réalisateur</label>
                <select asp-for="NoRealisateur" class ="form-control" asp-items="ViewBag.NoRealisateur"></select>
            </div>
            <div class="form-group">
                <label asp-for="NoProducteur" class="control-label">Producteur</label>
                <select asp-for="NoProducteur" class ="form-control" asp-items="ViewBag.NoProducteur"></select>
            </div>
            <div class="form-group">
                <label asp-for="Xtra" class="control-label">Extra</label>
                <input asp-for="Xtra" class="form-control" />
                <span asp-validation-for="Xtra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Ajouter le film" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary" asp-action="Index">Retour à la liste</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
